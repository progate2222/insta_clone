<div class="css">
    <h1>ログイン</h1>
    <br>
    <br>

    <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <%= form_with(model: @user, local: true) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, class:"form" %>
        <br>
        <br>
        <%= f.label :email %>
        <%= f.email_field :email, class:"form" %>
        <br>
        <br>
        <%= f.label :picture %>
        <%= f.file_field :picture, class:"form" %>
        <br>
        <br>
        <%= f.label :password %>
        <%= f.password_field :password, class:"form" %>
        <br>
        <br>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"form" %>
        <br>
        <br>
        <br>
        <%= f.submit "アカウントを作成する", class:"button" %>
    <% end %>
</div>
