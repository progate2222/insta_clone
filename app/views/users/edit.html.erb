<h1>Editing User</h1>

<%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :picture %>
    <%= image_tag @user.picture.url %>
    <%= f.file_field :picture %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.submit "Editing my account" %>
<% end %>

<%= link_to 'Show', @user %>
<%= link_to '投稿一覧へ', feeds_path %>


